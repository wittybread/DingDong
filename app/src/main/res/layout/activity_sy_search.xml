<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="wangxuewei.bwie.com.dingdong.homeFragments.sy.search.SySearchActivity">

    <wangxuewei.bwie.com.dingdong.homeFragments.sy.search.MyTitleView
        android:id="@+id/MyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></wangxuewei.bwie.com.dingdong.homeFragments.sy.search.MyTitleView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="热搜"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <wangxuewei.bwie.com.dingdong.homeFragments.sy.search.MyFlowLayout
        android:id="@+id/hotSearch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#C0C0C0"
            android:padding="5dp"
            android:text="热搜" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#C0C0C0"
            android:padding="5dp"
            android:text="热搜" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginLeft="20dp"
            android:background="#C0C0C0"
            android:padding="5dp"
            android:text="热搜" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#C0C0C0"
            android:padding="5dp"
            android:text="热搜" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#C0C0C0"
            android:padding="5dp"
            android:text="热搜" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#C0C0C0"
            android:padding="5dp"
            android:text="热搜" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#C0C0C0"
            android:padding="5dp"
            android:text="热搜" />

    </wangxuewei.bwie.com.dingdong.homeFragments.sy.search.MyFlowLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#C0C0C0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="历史搜索"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C0C0C0" />

    <ListView
        android:id="@+id/historyLv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></ListView>

    <Button
        android:id="@+id/btnClearHistoryLv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="清空历史搜索" />

</LinearLayout>
